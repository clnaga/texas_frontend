/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}
.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.room-header {
  margin-top: 2vh;
}

.room-button{
  display: flex;
  flex-direction: row;
  margin-top: 2vh;
}

.room-container {
  margin-top: 3vh;
}

.score-board-header {
  display: flex;
  flex-direction: row;
  margin-top: 2vh;
  min-height: 40px;
  box-sizing: border-box;
  /* 水平居中 */
  justify-content: center;
  /* 垂直居中 */
  align-items: center;
  background-color: aquamarine;
}

.score-board-body {
  margin-top: 1vh;
}

.score-board-item {
  margin-top: 1vh;
  display: flex;
  flex-direction: row;
  height: auto;
  box-sizing: border-box;
  /* 水平居中 */
  justify-content: center;
}

.score-board-text1 {
  background-color: #F1F1F1;
  flex: 1;
  text-align: center;
}

.score-board-text2 {
  background-color: #E6E6E6;
  flex: 1;
  text-align: center;
}

/* popup */
.popup-container {
  min-width: 300px;
}