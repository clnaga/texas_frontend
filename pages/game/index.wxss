/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  --td-input-vertical-padding: 10rpx
}
.scrollarea {
  flex: 1;
  overflow-y: hidden;
}
.custom-tabs {
  margin-bottom: 32rpx;
}

/*  */
/* 房间头概况 */
.room-info-item {
  display: flex;
  flex-direction: row;
}

.room-opt-btn {
  display: flex;
  flex-direction: row;
  margin-top: 2vh;
}
.popup-container {
  min-width: 300px;
}

/*  */
/* 对局信息 */
.score-board-header {
  display: flex;
  flex-direction: row;
  margin-top: 2vh;
  min-height: 40px;
  box-sizing: border-box;
  /* 水平居中 */
  justify-content: center;
  /* 垂直居中 */
  align-items: center;
  background-color: aquamarine;
}
.score-board-body {
  margin-top: 1vh;
}
.score-board-item {
  margin-top: 1vh;
  display: flex;
  flex-direction: row;
  height: auto;
  box-sizing: border-box;
  /* 水平居中 */
  justify-content: center;
}
.score-board-text1 {
  background-color: #F1F1F1;
  flex: 1;
  text-align: center;
}
.score-board-text2 {
  background-color: #E6E6E6;
  flex: 1;
  text-align: center;
}

